<Window x:Class="GameOfEconomy.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfEconomy"
        mc:Ignorable="d"
        Title="MainMenu" Height="432" Width="480.8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="273*"/>
            <ColumnDefinition Width="202*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="62*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="190*"/>
            </Grid.RowDefinitions>

            <Button Content="New Game" Grid.Row="1" Margin="5" Click="Button_Click_1"/>
            <Button Content="Load Game" Grid.Row="2" Margin="5" Click="Button_Click_2"/>
            <Button Content="Exit" Grid.Row="3" Margin="5" Click="Button_Click"/>

        </Grid>

    </Grid>
</Window>
